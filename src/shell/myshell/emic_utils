# ----------------------------
# 在数组或字符串中寻找另一个字符串
# ----------------------------
emic_indexOf(){
    if [ -z "$1" ] ; then return 1; fi
    if [ -z "$2" ] ; then return 2; fi
    for x in $2
    do
	if [ $x = $1 ] ; then return 0; fi
    done
    return 3
}